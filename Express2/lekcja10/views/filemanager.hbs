<div class="leftPanel">
    Filemanager
    <div class="buttonNewFolder">
        Create new folder
    </div>
    <div class="createNewFile">
        Create new file
    </div>
    <div class="uploadFiles">
        <form action="/upload" method="post" enctype="multipart/form-data">
            <img src="/icons/direct-download.png">
            <label for="filestoupload">Wybierz pliki</label>
            <input type="file" multiple required accept="*" name="filestoupload" id="filestoupload">
            <input type="submit">
        </form>
    </div>
</div>
<div class="rightPanel">
    <div class="directories">
        {{#each folders}}
        <div class="element folder">
            <div class="upper-part">
                <img src="{{img}}" alt="{{type}}">
                <a href="/delete?name={{name}}"><img src="close.png" alt="X"></a>
            </div>
            <a href="">{{name}}</a>
        </div>
        {{/each}}
    </div>
    <div class="files">
        <div class="row">
            {{#each files}}
            <div class="element file">
                <div class="upper-part">
                    <img src="{{img}}" alt="{{type}}">
                    <a href="/delete?name={{name}}"><img src="close.png" alt="X"></a>
                </div>
                <a href="">{{name}}</a>
            </div>
            {{/each}}
        </div>
    </div>
</div>